extends layout

block content
  form.signin.form-horizontal(action = '/signup', method = 'post')
    .control-group
      label.control-label(for = 'user-email') Email:
      .controls
        input#user-email(type = 'email', name='user[email]', placeholder = 'Email', value = user.email)
    .control-group
      label.control-label(for = 'user-password') Password:
      .controls
        input#user-password(type = 'password', name = 'user[password]', placeholder = 'Password')
    .control-group
      label.control-label(for = 'user-password-confirm') Confirm Password:
      .controls
        input#user-password-confirm(type = 'password', name = 'user[passwordConfirm]', placeholder = 'Confirm Password')
    .form-actions
      button.btn(type = 'submit') Sign Up